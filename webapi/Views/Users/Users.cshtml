
@using webapi.Models;

@model IEnumerable<User>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
</head>
<body>
    <div>
        <h3>Table of users</h3>
        @if (Model.Count() > 0)
        {
            <hr />
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th>First Name  </th>
                    <th>Last Name  </th>
                    <th>Image  </th>
                </tr>
                @foreach (User user in Model)
                {
                    <tr>
                        <td>@user.first_name  </td>
                        <td>@user.last_name  </td>
                        <td><img height="60" width="60" src="/images/profile/@user.image"/> </td>
                    </tr>
                }
            </table>
        }
    </div>



    @using (Html.BeginForm("Create", "Users", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
    {

            <h3>Add user</h3>
            <div class="form-group">
                <label for="firstNameInput">First Name</label>
                <input type="text" name="firstNameInput" class="form-control" id="firstNameInput" placeholder="First Name input">
            </div>
            <div class="form-group">
                <label for="LastNameInput">Last Name</label>
                <input name="lastNameInput" type="text" class="form-control" id="lastNameInput" placeholder="Last Name input">
            </div>
            <div class="form-group">
                <label for="LastNameInput">Image</label>
                <input type="file" name="filePic" id="filePic" accept="image/*">

            </div>

            <div class="col-sm-10">
                <button type="submit" value="Upload" class="btn btn-primary">Add User</button>
            </div>

    }
    

    </body>
</html>
